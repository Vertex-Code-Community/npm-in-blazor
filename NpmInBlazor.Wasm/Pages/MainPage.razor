@inject IJSRuntime JS

<button @onclick="Run">Run</button>

@if (Rows is not null)
{
    <table class="table">
        <thead>
        <tr><th>Metric</th><th>Value</th></tr>
        </thead>
        <tbody>
        @foreach (var r in Rows)
        {
            <tr>
                <td>@r.metric</td>
                <td>@r.value</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    StatRow[]? Rows;

    async Task Run()
    {
        var numbers = new[] { 1.0, 2.0, 3.0, 10.0 };
        Rows = await JS.InvokeAsync<StatRow[]>("simpleStats.analyzeNumbers", numbers);
    }
}